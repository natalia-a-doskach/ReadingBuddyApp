<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.READINGBUDDY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>v
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->o
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:buttonStyle">@style/Button</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">false</item>

        <!-- specify enter and exit transitions -->
    </style>

    <style name="Theme.READINGBUDDY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:windowActivityTransitions">false</item>
    </style>

    <style name="Theme.READINGBUDDY.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.READINGBUDDY.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>




